# Tmux helpers
function tsplit() {
  tmux split-window -v "$@"
}

function tvsplit() {
  tmux split-window -h "$@"
}

function tresize() {
  tmux resize-pane -D "$@"
}

function tresizeh() {
  tmux resize-pane -R "$@"
}

function tresizev() {
  tmux resize-pane -U "$@"
}

function tresizeleft() {
  tmux resize-pane -L "$@"
}

function tresizeup() {
  tmux resize-pane -U "$@"
}

function tresizedown() {
